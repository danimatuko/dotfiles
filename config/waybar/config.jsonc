{
  "layer": "top",
  "position": "top",
  "mod": "dock",
  "margin-left": 10,
  "margin-right": 10,
  "margin-top": 7,
  "margin-bottom": 0,
  "exclusive": true,
  "passthrough": false,
  "gtk-layer-shell": true,
  "reload_style_on_change": true,

  "modules-left": [
    "custom/smallspacer",
    "hyprland/workspaces",
    "custom/spacer",
    "mpris"
  ],

  "modules-center": [
    "custom/padd",
    "custom/l_end",
    "custom/r_end",
    "hyprland/window",
    "custom/padd"
  ],

  "modules-right": [
    "custom/padd",
    "custom/l_end",
    "tray",
    "group/expand-3",
    "bluetooth",
    "network",
    "clock",
    "battery",
    "custom/notification",
    "custom/padd"
  ],

  // ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ Left modules ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
  "custom/smallspacer": {
    "format": "‚Äâ"
  },
  "hyprland/workspaces": {
    "format": "{icon}",
    "format-icons": {
      "default": "ÔÑå",
      "active": "ÔÑë"
    },
    "persistent-workspaces": {
      "*": 5
    }
  },
  "custom/spacer": {
    "format": "|"
  },
  "mpris": {
    "format": "{player_icon} {dynamic}",
    "format-paused": "<span color='grey'>{status_icon} {dynamic}</span>",
    "max-length": 50,
    "player-icons": {
      "default": "‚è∏",
      "mpv": "üéµ"
    },
    "status-icons": {
      "paused": "‚ñ∂"
    },
    "on-click-right": "wiremix"
  },

  // ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ Center modules ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
  "hyprland/window": {
    "format": "<span weight='bold'>{initialTitle}</span>",
    "max-length": 120,
    "icon": false,
    "icon-size": 13
  },

  // ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ Right modules ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
  "tray": {
    "icon-size": 16,
    "rotate": 0,
    "spacing": 3
  },
  "group/expand-3": {
    "orientation": "horizontal",
    "drawer": {
      "transition-duration": 600,
      "children-class": "not-power",
      "transition-to-left": true,
      "click-to-reveal": false
    },
    "modules": [
      "pulseaudio",
      "custom/wiremix",
      "pulseaudio/slider"
    ]
  },
  "custom/wiremix": {
    "format": "ÔÄ®",
    "tooltip": "Open Wiremix",
    "on-click": "ghostty -e wiremix"
  },
  "bluetooth": {
    "format": "{icon}",
    "format-icons": {
      "enabled": "Û∞ÇØ",
      "connected": "Û∞Ç± ",
      "disabled": "Û∞Ç≤ ",
      "off": "Û∞Ç≤ "
    },
    "tooltip-format": "{controller_alias}\n{num_connections} connected",
    "tooltip-format-connected": "{controller_alias}\n{num_connections} connected\n\n{device_enumerate}",
    "tooltip-format-enumerate-connected": "{device_alias}",
    "tooltip-format-enumerate-connected-battery": "{device_alias} ({device_battery_percentage}%)",
    "interval": 10,
    "on-click": "blueberry",
    "on-click-right": "~/dotfiles/scripts/rofi-bluetooth.sh",
    "on-click-middle": "bluetoothctl power toggle",
    "format-no-controller": "Û±õâ"
  },
  "network": {
    "tooltip": true,
    "format-wifi": "{icon}‚Äâ",
    "format-icons": ["Û∞§ü", "Û∞§¢", "Û∞§•"],
    "format-ethernet": "Û∞àÄ ",
    "tooltip-format": "Network: <big><b>{essid}</b></big>\nSignal: <b>{signaldBm}dBm ({signalStrength}%)</b>\nIP: <b>{ipaddr}</b>",
    "format-linked": "Û∞àÄ {ifname} (No IP)",
    "format-disconnected": "ÔÅ™ ",
    "tooltip-format-disconnected": "Disconnected",
    "on-click": "ghostty --class=Impala -e impala",
    "on-click-right": "~/dotfiles/bin/rofi-wifi-menu.sh",
    "interval": 2
  },
  "clock": {
    "format": "{:%I:%M %p}",
    "tooltip-format": "<tt>{calendar}</tt>",
    "calendar": {
      "mode": "month",
      "mode-mon-col": 3,
      "on-scroll": 1,
      "on-click-right": "mode",
      "format": {
        "months": "<span color='#ffead3'><b>{}</b></span>",
        "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
        "today": "<span color='#ff6699'><b>{}</b></span>"
      }
    },
    "actions": {
      "on-click-right": "mode",
      "on-click-forward": "tz_up",
      "on-click-backward": "tz_down",
      "on-scroll-up": "shift_up",
      "on-scroll-down": "shift_down"
    }
  },
  "battery": {
    "states": {
      "good": 95,
      "warning": 30,
      "critical": 20
    },
    "format": "{icon}",
    "format-charging": "<span color='#a6d189'>Û±êã</span>",
    "format-plugged": "Û∞ÇÑ",
    "format-icons": ["Û∞Çé","Û∞Å∫","Û∞Åª","Û∞Åº","Û∞ÅΩ","Û∞Åæ","Û∞Åø","Û∞ÇÄ","Û∞ÇÅ","Û∞ÇÇ","Û∞Åπ"],
    "on-click-right": "pkill waybar & hyprctl dispatch exec waybar"
  },
  "custom/notification": {
    "tooltip": false,
    "format": "{icon}",
    "format-icons": {
      "notification": "Û∞Ö∏",
      "none": "Û∞Çú",
      "dnd-notification": "Û∞Ö∏",
      "dnd-none": "Û±è®",
      "inhibited-notification": "Û∞Ö∏",
      "inhibited-none": "Û∞Çú",
      "dnd-inhibited-notification": "Û∞Ö∏",
      "dnd-inhibited-none": "Û±è®"
    },
    "return-type": "json",
    "exec-if": "which swaync-client",
    "exec": "swaync-client -swb",
    "on-click-right": "swaync-client -d -sw",
    "on-click": "swaync-client -t -sw",
    "escape": true
  },

  // ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ Utility padding ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
  "custom/l_end": { "format": " ", "interval": "once", "tooltip": false },
  "custom/r_end": { "format": " ", "interval": "once", "tooltip": false },
  "custom/padd": { "format": "  ", "interval": "once", "tooltip": false },

  // ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ Sliders ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
  "pulseaudio/slider": {
    "min": 5,
    "max": 100,
    "rotate": 0,
    "device": "pulseaudio",
    "scroll-step": 1
  },
  "pulseaudio": {
    "format": "{icon}",
    "format-muted": "Ô™Ä",
    "tooltip-format": "{icon} {desc} // {volume}%",
    "scroll-step": 5,
    "format-icons": {
      "headphone": "ÔÄ•",
      "default": ["ÔÄ¶","ÔÄß","ÔÄ®"]
    }
  }
}
