{
    "hyprland/workspaces": {
        "disable-scroll": true,
        "all-outputs": true,
        "active-only": false,
        "format": " {icon} ",
        "format-icons": {
            "default": ""
        },
        "persistent-workspaces": {
            "1": {},
            "2": {},
            "3": {},
            "4": {},
            "5": {}
        }
    },
    "tray": {
        "spacing": 10
    },
    "clock": {
        "format": "{:%H:%M}",
        "timezone": "Israel",
        "format-alt": " {:%d/%m/%Y}",
        "rotate": 0,
        "tooltip-format": "<span>{calendar}</span>",
        "calendar": {
            "mode": "month",
            "format": {
                "months": "<span color='#ff6699'><b>{}</b></span>",
                "days": "<span color='#cdd6f4'><b>{}</b></span>",
                "weekdays": "<span color='#7CD37C'><b>{}</b></span>",
                "today": "<span color='#ffcc66'><b>{}</b></span>"
            }
        }
    },
    "backlight": {
        "format": "{icon}",
        "format-icons": [
            "",
            "",
            "",
            "",
            "",
            "",
            "",
            "",
            ""
        ]
    },
    "pulseaudio": {
        "format": "{icon}",
        "format-muted": "",
        "format-icons": {
            "default": [
                "",
                " ",
                " "
            ]
        },
        "on-click": "pavucontrol"
    },
    "custom/power": {
        "tooltip": false,
        "on-click": "wlogout -b 4",
        "format": "󰤆"
    },
    "network": {
        "format": "{icon}",
        "format-wifi": "",
        "format-icons": [
            "󰤯",
            "󰤟",
            "󰤢",
            "󰤥",
            "󰤨"
        ],
        "format-ethernet": "󰈀 ",
        "format-disconnected": "󰖪 ",
        "tooltip-format-wifi": "󰖩 {essid}\n󰇚 {signalStrength}%\n󰩟 {ipaddr}\n󰶼 {frequency} GHz\n\n󰇣 {bandwidthDownBytes}\n󰕒 {bandwidthUpBytes}",
        "tooltip-format-ethernet": "󰈀 Wired Connection\n󰩟 {ipaddr}\n\n󰇣 {bandwidthDownBytes}\n󰕒 {bandwidthUpBytes}",
        "tooltip-format-disconnected": "󰖪 No Connection\n\nClick to manage networks",
        "on-click": "/home/$USER/.config/waybar/scripts/wifi-menu.sh",
        "on-click-right": "nm-connection-editor",
        "on-click-middle": "nmcli networking off && sleep 1 && nmcli networking on",
        "interval": 3,
        "nospacing": 1,
        "signal-strength-exponential": true,
        "tooltip-format": "{ifname}",
        "min-length": 2
    },
    "hyprland/window": {
        "format": "{initialClass}",
        "format-empty": "",
        "on-empty": "false"
    },
    "bluetooth": {
        "format": "{icon}",
        "format-icons": {
            "enabled": "󰂯",
            "connected": "󰂱",
            "disabled": "󰂲",
            "off": "󰂲"
        },
        "format-disabled": "󰂲",
        "format-off": "󰂲",
        "tooltip-format": "{controller_alias}\n{num_connections} connected",
        "tooltip-format-connected": "{controller_alias}\n{num_connections} connected\n\n{device_enumerate}",
        "tooltip-format-enumerate-connected": "{device_alias}",
        "tooltip-format-enumerate-connected-battery": "{device_alias} ({device_battery_percentage}%)",
        "interval": 10,
        "on-click": "~/dotfiles/scripts/rofi-bluetooth.sh",
        "on-click-right": "blueman-manager",
        "on-click-middle": "bluetoothctl power toggle",
        "format-no-controller": "󱛉"
    },
    "custom/system": {
        "format": "",
        "tooltip": false
    },
    "cpu": {
        "format": "/ C {usage}% ",
        "on-click": "alacritty -e htop"
    },
    "memory": {
        "format": "/ M {}% ",
        "on-click": "alacritty -e htop"
    },
    "disk": {
        "interval": 30,
        "format": "D {percentage_used}% ",
        "path": "/",
        "on-click": "alacritty -e htop"
    },
    "hyprland/language": {
        "format": "{short}"
    },
    "group/hardware": {
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 300,
            "children-class": "not-memory",
            "transition-left-to-right": false
        },
        "modules": [
            "custom/system",
            "disk",
            "cpu",
            "memory",
            "hyprland/language"
        ]
    },
    "user": {
        "format": "{user}",
        "interval": 60,
        "icon": false
    },
    "idle_inhibitor": {
        "format": "{icon}",
        "tooltip": true,
        "format-icons": {
            "activated": "",
            "deactivated": ""
        },
        "on-click-right": "hyprlock"
    },
    "custom/notification": {
        "tooltip-format": "Left: Notifications\nRight: Do not disturb",
        "format": "{icon}",
        "format-icons": {
            "notification": "<span foreground='red'><sup></sup></span>",
            "none": "",
            "dnd-notification": "<span foreground='red'><sup></sup></span>",
            "dnd-none": "",
            "inhibited-notification": "<span foreground='red'><sup></sup></span>",
            "inhibited-none": "",
            "dnd-inhibited-notification": "<span foreground='red'><sup></sup></span>",
            "dnd-inhibited-none": ""
        },
        "return-type": "json",
        "exec-if": "which swaync-client",
        "exec": "swaync-client -swb",
        "on-click": "swaync-client -t -sw",
        "on-click-right": "swaync-client -d -sw",
        "escape": true
    },
    "battery": {
        "interval": 10,
        "states": {
            "warning": 25,
            "critical": 15
        },
        "format": "{icon}",
        "format-charging": " {capacity}%",
        "format-plugged": " {capacity}%",
        "format-full": " {icon}{capacity}%",
        "tooltip-format": "Capacity: {capacity}%\nTime Remaining: {time}\nPower Draw: {power}W",
        "format-icons": [
            "",
            "",
            "",
            "",
            ""
        ]
    }
}
